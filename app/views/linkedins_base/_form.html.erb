<%= form_for @linkedin, :html => { :class => "form-horizontal linkedin" } do |f| %>

  <% if @linkedin.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@linkedin.errors.count, "error") %> prohibited this linkedin from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @linkedin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :path, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :path, :class => 'form-control' %>
    </div>
    <%=f.error_span(:path) %>
  </div>
  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%=f.error_span(:username) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                linkedins_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
